

Scanner klv=new Scanner(System.in);
   int toplam=0;
   double ort;
   int sayac = 0;
        System.out.println("Lutfen sayi giriniz");
        int sayi=klv.nextInt();
        for (int i = 0; i <= sayi; i++) {
            if (i%3==0 && i%4==0) {
                toplam=toplam +i;
                sayac++;
            }
        }
        ort=toplam/sayac;
        System.out.println("ort="+ort);
        
